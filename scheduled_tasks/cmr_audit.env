# CMR Audit Environment Configuration
# Source this file before running run_cmr_audit.sh
# Example: source cmr_audit.env && ./run_cmr_audit.sh -f hls

# Repository paths
export PCM_REPO_PATH="${PCM_REPO_PATH:-/export/home/hysdsops/scheduled_tasks/opera-sds-pcm}"
export OPS_REPO_PATH="${OPS_REPO_PATH:-/export/home/hysdsops/scheduled_tasks/opera-sds-ops}"

# Python virtual environment path
export CMR_AUDIT_VENV_PATH="${CMR_AUDIT_VENV_PATH:-$PCM_REPO_PATH/venv_cmr_audit/bin/activate}"

# Alternative Docker environment paths (uncomment to use Docker setup)
# export PCM_REPO_PATH="${PCM_REPO_PATH:-/app/opera-sds-pcm}"
# export OPS_REPO_PATH="${OPS_REPO_PATH:-/app/opera-sds-ops}"
# export CMR_AUDIT_VENV_PATH="${CMR_AUDIT_VENV_PATH:-/opt/venv/bin/activate}"

# Git configuration
export GIT_TOKEN="${GIT_TOKEN:-}"
export GIT_OAUTH_TOKEN="${GIT_OAUTH_TOKEN:-$GIT_TOKEN}"

# AWS configuration (optional - can also use ~/.aws/credentials)
# export AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID:-}"
# export AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY:-}"
# export AWS_DEFAULT_REGION="${AWS_DEFAULT_REGION:-us-west-2}"

# Logging configuration
export CMR_AUDIT_LOG_LEVEL="${CMR_AUDIT_LOG_LEVEL:-INFO}"

# Output configuration
export CMR_AUDIT_OUTPUT_DIR="${CMR_AUDIT_OUTPUT_DIR:-$OPS_REPO_PATH/scheduled_tasks}"

# Print configuration for debugging
echo "CMR Audit Environment Configuration:"
echo "  PCM_REPO_PATH: $PCM_REPO_PATH"
echo "  OPS_REPO_PATH: $OPS_REPO_PATH"
echo "  CMR_AUDIT_VENV_PATH: $CMR_AUDIT_VENV_PATH"
echo "  CMR_AUDIT_OUTPUT_DIR: $CMR_AUDIT_OUTPUT_DIR"
echo "  GIT_TOKEN: ${GIT_TOKEN:+***SET***}"
echo "  CMR_AUDIT_LOG_LEVEL: $CMR_AUDIT_LOG_LEVEL"
